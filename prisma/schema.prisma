generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  role          Role            @default(USER)
  accounts      Account[]
  sessions      Session[]
  appointments  Appointment[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Service {
  id           String        @id @default(cuid())
  name         String
  duration     Int           @default(120) // estimated duration in minutes
  price        Int           @default(0)
  warrantyMonths Int           @default(0) // 預設保固月數
  isActive      Boolean       @default(true)
  appointments   Appointment[]
  createdAt      DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Customer {
  id          String    @id @default(cuid())
  name        String?   // 客戶姓名
  phoneNumber String    @unique // 電話（主要識別）
  notes       String?   // 備註
  vehicles    Vehicle[] // 一對多：可擁有多台車
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([phoneNumber])
}

model Vehicle {
  id           String        @id @default(cuid())
  licensePlate String        @unique // 車牌唯一
  carModel     String?       // 車型
  customerId   String
  customer     Customer      @relation(fields: [customerId], references: [id])
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([customerId])
  @@index([licensePlate])
}

model Appointment {
  id              String    @id @default(cuid())
  date            DateTime
  carModel        String    // 冗餘保留，方便查詢
  licensePlate    String?   // 冗餘保留，方便查詢
  phoneNumber     String?   // 冗餘保留，方便查詢
  status          String    @default("PENDING") // PENDING, CONFIRMED, CANCELLED, COMPLETED
  actualDuration  Int?      // 實際工時 (分鐘)
  warrantyUntil   DateTime? // 保固到期日
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  serviceId       String
  service         Service   @relation(fields: [serviceId], references: [id])
  vehicleId       String?   // 關聯車輛
  vehicle         Vehicle?  @relation(fields: [vehicleId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([vehicleId])
  @@index([licensePlate])
  @@index([phoneNumber])
}

// Settings - 系統設定（只會有一筆）
model Settings {
  id              String    @id @default("default")
  businessName    String    @default("新泰汽車傳動軸")
  phoneNumber     String    @default("0979293225")
  address         String    @default("525 彰化縣竹塘鄉光明路 525 號竹田巷 17 之 8 號")
  slotDuration    Int       @default(120) // 預約時段長度（分鐘）
  lineNotifyToken String?   // LINE Notify Token
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
